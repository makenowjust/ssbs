{
  "name": "@makenowjust/ssbs",
  "description": "static serve + browser sync",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "repository": "https://github.com/MakeNowJust/ssbs",
  "version": "1.0.2",
  "main": "./src/main.ts",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "ncc build -e jsdom -e node-pre-gyp -e nw-pre-gyp -e emitter . && pkg -t node10-macos-x64,node10-linux-x64,node10-win-x64 --out-path out .",
    "format": "prettier-package-json --write && prettier --ignore-path .gitignore --write **/*.{js,json,md,ts,yml}",
    "lint": "prettier-package-json --list-different && prettier --ignore-path .gitignore --list-different **/*.{js,json,md,ts,yml}"
  },
  "devDependencies": {
    "@types/chokidar": "1.7.5",
    "@types/fs-extra": "9.0.9",
    "@types/jsdom": "16.2.9",
    "@types/koa": "2.13.1",
    "@types/koa-logger": "3.1.1",
    "@types/koa-route": "3.2.4",
    "@types/koa-send": "4.1.2",
    "@types/on-finished": "2.3.1",
    "@types/opn": "5.1.0",
    "@types/serve-index": "1.7.30",
    "@zeit/ncc": "0.22.3",
    "arg": "5.0.0",
    "chalk": "4.1.0",
    "chokidar": "3.5.1",
    "consola": "2.15.3",
    "fs-extra": "9.1.0",
    "inversify": "5.0.5",
    "jsdom": "16.5.2",
    "koa": "2.13.1",
    "koa-logger": "3.2.1",
    "koa-route": "3.2.0",
    "koa-send": "5.0.1",
    "on-finished": "2.3.0",
    "opn": "5.5.0",
    "pkg": "4.5.1",
    "prettier": "1.19.1",
    "prettier-package-json": "2.1.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.6",
    "serve-index": "1.9.1",
    "typescript": "4.2.3"
  },
  "pkg": {
    "scripts": [
      "./dist/index.js"
    ],
    "assets": [
      "./dist/directory.html",
      "./dist/style.css",
      "./dist/xdg-open"
    ]
  }
}
